<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Course Code and Name -->
        <TextView
            android:id="@+id/tvCourseCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CS101"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvCourseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Introduction to Programming"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course description goes here..."
            android:textSize="14sp"
            android:textColor="@color/gray_dark"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Details Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- Instructor -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Instructor:"
                    android:textSize="14sp"
                    android:textColor="@color/gray_dark"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvInstructor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Dr. Smith"
                    android:textSize="14sp"
                    android:textColor="@color/black" />

            </LinearLayout>

            <!-- Schedule -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Schedule:"
                    android:textSize="14sp"
                    android:textColor="@color/gray_dark"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSchedule"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Mon/Wed 10:00-11:30"
                    android:textSize="14sp"
                    android:textColor="@color/black" />

            </LinearLayout>

            <!-- Credits -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Credits:"
                    android:textSize="14sp"
                    android:textColor="@color/gray_dark"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCredits"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="3"
                    android:textSize="14sp"
                    android:textColor="@color/black" />

            </LinearLayout>

            <!-- Department -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Department:"
                    android:textSize="14sp"
                    android:textColor="@color/gray_dark"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDepartment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Computer Science"
                    android:textSize="14sp"
                    android:textColor="@color/black" />

            </LinearLayout>

            <!-- Semester -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Semester:"
                    android:textSize="14sp"
                    android:textColor="@color/gray_dark"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSemester"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Fall 2024"
                    android:textSize="14sp"
                    android:textColor="@color/black" />

            </LinearLayout>

            <!-- Seats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Seats:"
                    android:textSize="14sp"
                    android:textColor="@color/gray_dark"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSeats"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="25/30 (5 available)"
                    android:textSize="14sp"
                    android:textColor="@color/black" />

            </LinearLayout>

        </LinearLayout>

        <!-- Register Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register for Course"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView>